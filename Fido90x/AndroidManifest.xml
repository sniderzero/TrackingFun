<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fidotechnologies.fido90tracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11"/>
    <supports-screens android:largeScreens="true" android:smallScreens="false" android:normalScreens="true"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.Black.NoTitleBar" android:allowClearUserData="true">
        <activity
            android:name=".launch"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="programlist" android:screenOrientation="portrait">
        	android:theme="@android:style/"
        </activity>
        <activity android:name="exerciselist" android:screenOrientation="portrait"></activity>
        <activity android:name="detailview" android:screenOrientation="portrait"></activity>
        <activity android:name="AppPreferences" android:screenOrientation="portrait"></activity>
        <activity android:name="StopwatchActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="com.fidotechnologies.ultitrack90.HistoryView" android:screenOrientation="portrait"></activity>
        
        
    </application>

</manifest>